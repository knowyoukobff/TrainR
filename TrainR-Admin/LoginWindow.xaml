<Window x:Class="TrainR_Admin.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainR_Admin"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="LoginWindow" Height="230" Width="240">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox Name="LoginBox" Margin="10,44,10,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" FontSize="18"/>
        <PasswordBox Name="PasswordBox" Margin="10,101,10,0" VerticalAlignment="Top" FontSize="18"/>
        <Button IsDefault="True" Name="LoginButton" Content="Login" Margin="10,0,10,10" FontSize="20" Height="31" VerticalAlignment="Bottom" Click="LoginButton_Click"/>
    </Grid>
</Window>
